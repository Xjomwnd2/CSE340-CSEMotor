<!-- In views/inventory/add-classification.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <script defer src="/js/formValidation.js"></script> <!-- Client-side validation script -->
</head>
<body>
  <h1>Add New Classification</h1>

  <% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (message) { %>
    <p class="success"><%= message %></p>
  <% } %>

  <form id="add-classification-form" action="/inventory/add-classification" method="POST">
    <label for="classificationName">Classification Name</label>
    <input type="text" id="classificationName" name="classificationName" required pattern="[a-zA-Z0-9]+" title="No spaces or special characters">
    <button type="submit">Add Classification</button>
  </form>

</body>
</html>
