<!-- In views/inventory/add-inventory.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<h1>Add New Vehicle</h1>

<% if (errors && errors.length > 0) { %>
  <ul>
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (message) { %>
  <p class="success"><%= message %></p>
<% } %>

<form action="/inventory/add-inventory" method="POST">
  <label for="classificationList">Classification:</label>
  <%= classificationList %> <!-- Drop-down list from the utility -->

  <label for="make">Make:</label>
  <input type="text" id="make" name="make" value="<%= data ? data.make : '' %>" required>

  <label for="model">Model:</label>
  <input type="text" id="model" name="model" value="<%= data ? data.model : '' %>" required>

  <label for="year">Year:</label>
  <input type="number" id="year" name="year" min="1886" value="<%= data ? data.year : '' %>" required>

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" min="0" step="0.01" value="<%= data ? data.price : '' %>" required>

  <label for="miles">Miles:</label>
  <input type="number" id="miles" name="miles" min="0" value="<%= data ? data.miles : '' %>" required>

  <label for="color">Color:</label>
  <input type="text" id="color" name="color" value="<%= data ? data.color : '' %>" required>

  <label for="imagePath">Image Path:</label>
  <input type="text" id="imagePath" name="imagePath" value="/images/no-image-available.png" required>

  <label for="thumbPath">Thumbnail Path:</label>
  <input type="text" id="thumbPath" name="thumbPath" value="/images/no-image-available-thumb.png" required>

  <button type="submit">Add Vehicle</button>
</form>

</body>
</html>
